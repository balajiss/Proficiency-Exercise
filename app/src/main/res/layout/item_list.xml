<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/listItemBg"
    android:paddingTop="@dimen/padding_xxs"
    android:paddingBottom="@dimen/padding_xxs">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingLeft="@dimen/padding_sm"
        android:paddingRight="@dimen/padding_sm"
        android:textColor="@color/colorTitle"
        android:textSize="@dimen/titleText"
        android:textStyle="bold"
        tools:text="Hockey Night in Canada" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_toStartOf="@id/image"
        android:layout_toLeftOf="@id/image"
        android:paddingStart="@dimen/padding_sm"
        android:paddingLeft="@dimen/padding_sm"
        android:paddingEnd="@dimen/padding_xxs"
        android:paddingRight="@dimen/padding_xxs"
        android:textColor="@android:color/black"
        android:textSize="@dimen/descriptionText"
        tools:text="These Saturday night CBC broadcasts originally aired on radio in 1931. In 1952 they debuted on television and continue to unite (and divide) the nation each week." />

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:adjustViewBounds="true"
        android:contentDescription="@string/image_content"
        android:maxWidth="@dimen/maxImageWidth"
        android:maxHeight="@dimen/maxImageHeight"
        android:minWidth="@dimen/minImageWidth"
        android:minHeight="@dimen/minImageHeight"
        android:paddingStart="@dimen/padding_xxs"
        android:paddingLeft="@dimen/padding_xxs"
        android:paddingEnd="@dimen/padding_sm"
        android:paddingRight="@dimen/padding_sm"
        android:scaleType="fitCenter"
        tools:src="@mipmap/ic_launcher" />

</RelativeLayout>